doctype html
html.h-100(lang="ko")
    head
        include meta
        block head
        if title
            title= `TAMS | ${title}`
        else
            title TAMS
    body.d-flex.flex-column
        #preloader
            .bar(role="progressbar")
        header.sticky-top
            include navbar
        main.flex-grow-1.vstack
            block contents
        include footer
        include ../modals/sitemap
        script(src="/src/js/app.js", type="module")
        block scripts
