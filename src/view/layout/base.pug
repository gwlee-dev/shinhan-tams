doctype html
html.h-100(lang="ko")
    head
        include meta
        block head
        if title
            title= `TAMS | ${title}`
        else
            title TAMS
    body.d-flex.flex-column
        .preloader.loading
            .bar(role="progressbar")
        .postloader
            .spinner-border.text-white(role="status")
            img(src="/src/img/tams.png", alt="TAMS")
            .w-100
            span.loader-msg 데이터를 가져오고 있습니다
        header.sticky-top
            include navbar
        main.flex-grow-1.vstack
            block contents
        include footer
        include ../modals/sitemap
        include ../modals/password
        script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.js") 
        script(src="/src/js/app.js", type="module")
        block scripts
