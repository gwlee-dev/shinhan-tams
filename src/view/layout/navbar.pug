.top-bar.bg-white.position-relative
    .container.pt-3.small.fw-light.align-items-center.d-none.d-lg-flex
        ul.csr-list.nav.me-auto
            each csr in csrList
                li.csr-list-item
                    a.plain-link(href="#")
                        span.me-1= csr.name
                        span.csr-value= csr.value
        .user-panel.ff-shinhan
            span.text-muted #[span.fw-normal 김신한](admin)님
            a.plain-link(href="/src/view/login.pug") 로그아웃 #[i.bi.bi-chevron-right]
nav.navbar.bg-white
    .container
        a.navbar-brand.d-block.d-lg-none.d-xxl-block(href="/")
            img.h-100(src="/src/img/logo.png")
        a.navbar-brand.d-none.d-lg-block.d-xxl-none(href="/")
            img.h-100(src="/src/img/logo_only.png")
        ul.navbar-nav.d-none.d-lg-flex.flex-row.gap-3.gap-xl-4.gap-xxl-5
            each node in nodes 
                li.nav-item
                    span.nav-link(
                        data-gr-target=`#offcanvas-${node.dir}`,
                        role="button"
                    )= node.title

        i.bi.bi-list.fs-2.lh-sm.ms-2(
            role="button",
            data-bs-toggle="modal",
            data-bs-target="#sitemap"
        )
