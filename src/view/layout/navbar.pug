each node in nodes 
    .offcanvas.offcanvas-top(tabindex="-1", id=`offcanvas-${node.dir}`)
        .container.vstack
            .offcanvas-header
                h5.offcanvas-title.mx-auto= node.title
            .offcanvas-body
                if node.nodes
                    ul.sub-nav.nav.justify-content-center.mb-3
                        each subNode in node.nodes
                            li.sub-nav-item
                                if subNode.link
                                    - var path = `/src/view/${node.dir}/${subNode.id}.pug`;
                                a.plain-link(href=path)= subNode.title
