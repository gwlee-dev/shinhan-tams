extends ../layout/base
include ../mixins/form
include ../mixins/pagination
include ../mixins/button
include ../mixins/modal
include ../mixins/badge

block head
    - var title = "시스템 작업 관리";

block contents
    .container
        h4.my-4.me-auto.text-truncate= title
    .contents.container.pt-2.flex-grow-1.d-flex.flex-column.gap-4
        ul.nav.nav-tabs
            li.nav-item
                a.nav-link.active(aria-current="page", href="#") 모니터링 데이터 삭제
            li.nav-item
                a.nav-link(href="#") 자동실행 오류 정정
            li.ms-auto
                +btn.btn-primary(
                    data-bs-toggle="modal",
                    data-bs-target="#danger-modal"
                ) 실행
        .table-responsive
            table#system_data_list.small.table-bordered.table.table-sm.table-hover.w-100.small
                thead
                    tr
                        th(scope="col") 순번
                        th(scope="col") 작업 일시
                        th(scope="col") 작업 담당자
                        th(scope="col") 대상 데이터(건)
                tbody
                    - for (var i = 1; i <= 10; i++)
                        tr
                            td= i
                            td 2022-10-18 13:17:36
                            td 관리자
                            td 0
    +danger-modal("실행")
        span.d-block 해당 동작을 실행하시겠습니까?
        span.d-block 이후 #[span.fw-bold 되돌릴 수 없습니다.]
