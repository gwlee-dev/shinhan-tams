mixin pagination
    nav.mt-4(aria-label="Page navigation example")
        ul.pagination.pagination-pill.justify-content-center
            li.page-item
                a.page-link(href="#", aria-label="Previous")
                    span(aria-hidden="true") #[i.bi.bi-chevron-left]
            li.page-item.active
                a.page-link(href="#") 1
            li.page-item
                a.page-link(href="#") 2
            li.page-item
                a.page-link(href="#") 3
            li.page-item
                span.page-link.nolink #[i.bi.bi-three-dots]
            li.page-item
                a.page-link(href="#") 3000
            li.page-item
                a.page-link(href="#", aria-label="Next")
                    span(aria-hidden="true") #[i.bi.bi-chevron-right]
