extends layout/popupBase
include mixins/form
include mixins/button
include mixins/badge
include mixins/modal
include mixins/pagination
include mixins/popup

block head
    - var title = "테스트 데이터셋 신규 등록";

block contents
    .popup-linkup.popup-linkup-xl.vstack.gap-3.pb-2
        +popup-title
            h5.m-0 테스트 데이터셋 신규 등록
            .ms-auto.ms-3
                +badge-secondary 최종변경일시
                span.badge.text-body.small.opacity-75 2022-05-16 14:45:52
        .container-fluid.vstack.gap-4
            section.d-flex.flex-column
                .d-flex
                .row.gx-2.gy-1
                    .col-2 #[+select-sm("시스템")]
                    .col-10 #[+input-sm("데이터셋 명")]
                    .col-12 #[+textarea-sm("데이터셋 설명")]
            section.d-flex.flex-column.dynamic-row
                .hstack.gap-2.align-items-center.mb-2
                    span.fs-5.fw-bold 열(필드) 관리
                    button#column-remove-btn.btn.btn-danger.btn-sm(
                        data-bs-toggle="modal",
                        data-bs-target="#remove-modal",
                        disabled
                    )
                        span 선택항목 (
                        span#column-count 0
                        span 개) 삭제
                    +a-btn-primary-sm.ms-auto.row-add-btn 추가
                    +a-btn-secondary-sm 초기화
                .table-responsive.bg-light(style="min-height: 224px")
                    table#column_list.small.table-bordered.table.table-sm.table-hover.w-100.bg-white.mb-0
                        thead
                            tr
                                th(scope="col")
                                    input#column-all.form-check-input(
                                        type="checkbox",
                                        value="",
                                        name="column",
                                        data-gr-type="condition",
                                        data-gr-target="#column-remove-btn",
                                        data-gr-count="#column-count"
                                    ) 
                                th(scope="col") 열이름
                                th(scope="col") 설명
                                th(scope="col") 삭제
                        tbody
        .container-fluid.d-flex
            .hstack.gap-2.mx-auto
                +btn-primary 저장
                +btn-cancel-modal 취소
