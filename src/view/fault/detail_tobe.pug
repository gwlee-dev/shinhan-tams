extends ../layout/base
include ../mixins/form
include ../mixins/pagination
include ../mixins/button
include ../mixins/modal
include ../mixins/badge

block head
    - var title = "테스트결과 상세정보";

block contents
    .container
        h4.my-3.me-auto.text-truncate= title
    .contents.container.pt-4.flex-grow-1.d-flex.flex-column.gap-4
        section.d-flex.flex-column
            .row
                .col
                    .table-responsive
                        table#test_result.table-bordered.table.table-sm.table-hover.w-100.small
                            thead
                                tr
                                    th(scope="col") 테스터
                                    th(scope="col") CSR
                                    th(scope="col") 개발자 신규작성
                                    th(scope="col") 테스터 신규작성
                                    th(scope="col") 수행
                                    th(scope="col") 정상
                                    th(scope="col") 결합
                                    th(scope="col") 개선
                                    th(scope="col") 제안
                                    th(scope="col") 불가
                                    th(scope="col") 배치
                            tbody
                                - for (var i = 1; i <= 10; i++)
                                    tr
                                        td 고신한
                                        td 1
                                        td 1
                                        td 1
                                        td 0
                                        td 2
                                        td 0
                                        td 4
                                        td 11
                                        td 0
                                        td 7
