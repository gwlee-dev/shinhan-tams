extends layout/base
include mixins/form
include mixins/pagination

block head
    - var title = "CSR 상세조회";

block contents
    .container
        .row.g-0
            .col
                h4.my-4.me-auto.text-truncate= title
            .col-auto.d-flex.align-items-center
                .hstack.gap-2.justify-content-center
                    button.btn.btn-primary(disabled) 승인
                    button.btn.btn-primary(disabled) 배정
                    button.btn.btn-secondary(disabled) 회수
                    button.btn.btn-secondary(disabled) 반려
                    button.btn.btn-secondary(disabled) 제외
    .contents.container.pt-4.flex-grow-1.d-flex.flex-column.gap-5
        .table-wrap.d-flex.flex-column
            span.fs-4.fw-bold.mb-2 CSR 정보
            .table-responsive
                table#design_req.table-bordered.table.table-sm.table-hover.w-100
                    thead
                        tr
                            th(scope="col") CSR 번호
                            th(scope="col") CSR 제목
                            th(scope="col") 완료 합의일
                            th(scope="col") CSR 요청일
                            th(scope="col") BA
                            th(scope="col") AA
                            th(scope="col") 개발부서
                            th(scope="col") 진행상태
                            th(scope="col") 테스트요청일
                            th(scope="col") 테스터
                    tbody
                        tr
                            td C202012248053B-6
                            td requirement_spec-1416308
                            td 2022-08-16
                            td 2022-08-16
                            td 최신한
                            td 정신한
                            td 솔루션개발본부
                            td.text-center #[span.badge.bg-primary.badge-history(role="button", data-bs-toggle="modal", data-bs-target="#progress-history") 진행중]
                            td 2022-08-16
                            td 박성빈
        .table-wrap.d-flex.flex-column
            .row.mb-2.g-2.align-items-center
                .col.auto
                    span.fs-4.fw-bold.mb-2 기능상세설명
                .col-auto
                    button#button-addon2.btn.btn-secondary.btn-sm(
                        type="button"
                    ) 회귀테스트 추가
            .table-responsive
                table#function_detail.table-bordered.table.table-sm.table-hover.w-100
                    thead
                        tr
                            th(scope="col") 요구사항 ID
                            th(scope="col") 요구사항명
                            th(scope="col") 요청구분
                            th(scope="col") 내용
                            th(scope="col") 메뉴
                    tbody
                        tr
                            td REQ-001
                            td requirement-1416310
                            td 수정
                            td #[a(href="#") 요구사항상세내용-1416311]
                            td
                                .hstack.gap-2.justify-content-center
                                    button.btn.btn-sm.btn-outline-primary.py-0 테스트케이스 추가
                                    button.btn.btn-sm.btn-outline-primary.py-0 결과문서
        .table-wrap.d-flex.flex-column
            .row.mb-2.g-2.align-items-center
                .col.auto
                    span.fs-4.fw-bold.mb-2 요구사항별 테스트케이스
                .col-auto
                    button#button-addon2.btn.btn-secondary.btn-sm(
                        type="button"
                    ) 일괄 정상
            .table-responsive
                table#requirement_case.table-bordered.table.table-sm.table-hover.w-100
                    thead
                        tr
                            th(scope="col") 번호
                            th(scope="col") 시스템
                            th(scope="col") 요구사항 ID
                            th(scope="col") 케이스 ID
                            th(scope="col") 케이스명
                            th(scope="col") 스크립트명
                            th(scope="col") 등록자
                            th(scope="col") 테스터
                            th(scope="col") 메뉴
                    tbody.small
                        tr
                            td 1
                            td 시스템-6
                            td REQ-001
                            td #[a(href="#") TC202010060063]
                            td testcase-1321056
                            td
                            td 정신한
                            td 관리자
                            td
                                .hstack.gap-2.justify-content-center
                                    button.btn.btn-sm.btn-outline-primary.py-0 자세히
                                    button.btn.btn-sm.btn-outline-primary.py-0 실행
                                    button.btn.btn-sm.btn-outline-secondary.py-0(
                                        disabled
                                    ) (실행이력 없음)
                                    button.btn.btn-sm.btn-outline-primary.py-0 결과입력
                                    button.btn.btn-sm.btn-outline-primary.py-0 결과이력
                                    button.btn.btn-sm.btn-outline-danger.py-0 삭제
        .table-wrap.d-flex.flex-column
            .row.mb-2.g-2.align-items-center
                .col.auto
                    span.fs-4.fw-bold.mb-2 자동테스트 수행이력
                .col-auto
                    button#button-addon2.btn.btn-danger.btn-sm(type="button") 선택항목 삭제
                .col-auto
                    .input-group.input-group-sm
                        span#basic-addon1.input-group-text 케이스ID
                        input.form-control(
                            type="text",
                            placeholder="검색어를 입력하세요"
                        )
                        button#button-addon2.btn.btn-secondary(type="button") 검색
            .table-responsive
                table#auto_history.table-bordered.table.table-sm.table-hover.w-100
                    thead
                        tr
                            th(scope="col")
                                input.form-check-input(
                                    type="checkbox",
                                    value="",
                                    name=name,
                                    id=id
                                ) 
                            th(scope="col") 시스템
                            th(scope="col") 케이스 ID
                            th(scope="col") 케이스명
                            th(scope="col") 스크립트명
                            th(scope="col") 테스터
                            th(scope="col") 테스트일자
                            th(scope="col") 메뉴
                    tbody.small
                        tr
                            td #[+check("history", "history-1", "mb-0")]
                            td 시스템-6
                            td #[a(href="#") TC202010060063]
                            td testcase-1321056
                            td
                            td 정신한
                            td 2022-08-18
                            td
                                .hstack.gap-2.justify-content-center
                                    button.btn.btn-sm.btn-outline-primary.py-0 자세히
                                    button.btn.btn-sm.btn-outline-secondary.py-0(
                                        disabled
                                    ) (실행이력 없음)
            +pagination

    include modals/progress-history
