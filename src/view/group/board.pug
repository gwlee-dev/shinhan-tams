extends ../layout/base
include ../mixins/form
include ../mixins/pagination
include ../mixins/button
include ../mixins/modal
include ../mixins/badge

block head
    - var title = "게시판";

block contents
    .container
        .row.g-0
            .col
                h4.my-3.me-auto.text-truncate= title
            .col-auto.d-flex.align-items-center
                .hstack.gap-2
                    +a-btn.btn-outline-primary(
                        href="/src/view/group/form.pug"
                    )
                        span.me-2 신규등록
                        i.bi-file-earmark-plus
    .contents.container.pt-4.flex-grow-1.d-flex.flex-column.gap-4
        section.d-flex.flex-column
            .table-responsive
                table#post_list.table-bordered.table.table-sm.table-hover.w-100.small
                    thead
                        tr
                            th(scope="col") 순번
                            th(scope="col") 제목
                            th(scope="col") 생성일
                            th(scope="col") 등록자
                            th(scope="col") 삭제
                    tbody
                        - for (var i = 15; i >= 1; i--)
                            tr 
                                td= i
                                td #[+link("/src/view/group/post.pug").text-decoration-none 10CM 그라데이션 가사]
                                td 2022-05-16
                                td 관리자
                                td
                                    .hstack.gap-1.justify-content-center
                                        +table-btn.btn-outline-danger(
                                            data-bs-toggle="modal",
                                            data-bs-target="#danger-modal"
                                        ) 삭제
        +pagination
    +danger-modal
